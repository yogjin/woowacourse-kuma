{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },

  "extends": "eslint:recommended",

  "overrides": [],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", 12]
  },

  "ignorePatterns": ["node_modules/", "__tests__/"]
}
